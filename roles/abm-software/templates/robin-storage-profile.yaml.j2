apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: robin-block
parameters:
  faultdomain: host
  replication: "3"
  blocksize: "512"
provisioner: robin
reclaimPolicy: Delete
volumeBindingMode: WaitForFirstConsumer

---

apiVersion: cdi.kubevirt.io/v1beta1
kind: StorageProfile
metadata:
  name: robin-block
  annotations:
    client.lifecycle.config.k8s.io/mutation: ignore
spec:
  claimPropertySets:
  - accessModes:
    - ReadWriteMany
    volumeMode: Block
