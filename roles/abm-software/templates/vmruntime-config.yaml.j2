apiVersion: vm.cluster.gke.io/v1
kind: VMRuntime
metadata:
  name: vmruntime
spec:
  enabled: {{ enable_vmruntime }}
  useEmulation: {{ kubevirt_use_emulation }}
  vmImageFormat: qcow2
  disableCDIUploadProxyVIP: {{ disable_cdi_upload_proxy_vip }}
  evictionPolicy:
    migrationTargetInitializationTimeout: 90s
  storage:                                                    # Robin Block Immediate is required for LiveMigration
    defaultStorageClass: robin-block-immediate